# Copy to .env and update as needed
# Server listen port (ignored on some serverless platforms)
TRACK_PORT=5000

# If your app is behind a proxy/load-balancer set to 'true' to honor X-Forwarded-For
TRUST_PROXY=false

# Toggle server-side IP geolocation lookup (true/false)
USE_IPAPI=true

# IP lookup service URL. {ip} will be replaced with the client IP
IPAPI_URL=https://ipapi.co/{ip}/json/

# Optional: forward enriched payload to another service/DB queue
FORWARD_URL=

# NODE_ENV can be 'development' or 'production'
NODE_ENV=development

# Postgres configuration
# If you have a full DATABASE_URL (recommended on managed platforms), set it and leave other DB_* empty
# Example: postgres://user:password@host:5432/dbname
DATABASE_URL=

# Alternative connection string names (some hosts / templates use these):
# POSTGRES_URL, POSTGRES_PRISMA_URL, POSTGRES_URL_NON_POOLING
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=

# Or set individual connection pieces:
DB_HOST=localhost
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=tracker
POSTGRES_HOST=
POSTGRES_PORT=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# If your Postgres requires SSL set to true
DB_SSL=false
POSTGRES_SSL=false
